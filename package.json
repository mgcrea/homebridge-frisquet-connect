{
  "name": "homebridge-frisquet-connect",
  "version": "0.10.1",
  "description": "Homebridge plugin for Frisquet Connect",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Olivier Louvignes <olivier@mgcrea.io>",
  "repository": "github:mgcrea/homebridge-frisquet-connect",
  "license": "MIT",
  "keywords": [
    "homebridge-plugin"
  ],
  "engines": {
    "node": ">=0.12.0",
    "homebridge": ">=1.0.0"
  },
  "scripts": {
    "start": "NODE_TLS_REJECT_UNAUTHORIZED=0 DEBUG=homebridge-frisquet-connect homebridge -D -U ./.homebridge -P .",
    "start:node": "NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_PATH=src/ ts-node .",
    "start:watch": "nodemon --ext \"ts,tsx\" --watch \"lib/\" --exec \"yarn start\"",
    "start:prod": "npm run spec:watch",
    "clean": "rm -rf .homebridge/persist/* .homebridge/accessories/*",
    "test": "npm run pretty && npm run lint && npm run spec",
    "spec": "NODE_TLS_REJECT_UNAUTHORIZED=0 CI=true jest --runInBand --colors --passWithNoTests",
    "spec:watch": "npm run spec --watch",
    "spec:coverage": "npm run spec --coverage",
    "lint": "eslint src/",
    "pretty": "prettier --check src/ test/",
    "check": "tsc --noEmit",
    "build": "tsup",
    "prepare": "pnpm run build"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "debug": "^4.4.3",
    "fakegato-history": "^0.6.7",
    "got": "^14.6.5",
    "lodash": "^4.17.21",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@mgcrea/eslint-config-node": "^0.14.1",
    "@tsconfig/node20": "^20.1.8",
    "@types/debug": "^4.1.12",
    "@types/jest": "^30.0.0",
    "@types/lodash": "^4.17.21",
    "@types/node": "^25.0.3",
    "@types/node-persist": "^3.1.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "homebridge": "^1.11.1",
    "jest": "^30.2.0",
    "nock": "^14.0.10",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.26.0+sha512.3b3f6c725ebe712506c0ab1ad4133cf86b1f4b687effce62a9b38b4d72e3954242e643190fc51fa1642949c735f403debd44f5cb0edd657abe63a8b6a7e1e402"
}
